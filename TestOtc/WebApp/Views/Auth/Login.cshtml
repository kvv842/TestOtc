@model WebApp.Models.Auth.LoginModel

@{
    ViewBag.Title = "Введите логин и пароль";
}

<div class="row">
    <h4 class="col-md-12 text-center">Введите логин и пароль</h4>
</div>
<div class="row">
    @using (Html.BeginForm("Login", "Auth", FormMethod.Post))
    {
        <div class="form-horizontal form-widgets col-md-4 col-md-offset-4">
            
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)
            <div class="form-group">
                @Html.LabelFor(m => m.Login, htmlAttributes: new { @class = "control-label col-md-4" })
                <div class="col-md-8">
                    @Html.TextBoxFor(m => m.Login, htmlAttributes: new { required = "required" })
                    @Html.ValidationMessageFor(model => model.Login)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Password, htmlAttributes: new { @class = "control-label col-md-4" })
                <div class="col-md-8">
                    @Html.PasswordFor(m => m.Password, htmlAttributes: new { required = "required" })
                    @Html.ValidationMessageFor(model => model.Password)
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-4 col-md-10">
                    <input type="submit" class="btn btn-dark" value="Войти" />
                </div>
            </div>
        </div>
    }
</div>



