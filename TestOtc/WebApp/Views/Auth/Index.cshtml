
@{
    ViewBag.Title = "Index";
}

<h2>Indexeee</h2>
<form data-role="form" action="~/auth/post" method="post">
    <div class="form-horizontal form-widgets col-lg-6">

        <div class="form-group">
            <label class="control-label col-sm-4" for="login">Login</label>
            <div class="col-md-6">
                <input type="text" required placeholder="login" />
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-sm-4" for="password">Password</label>
            <div class="col-md-6">
                <input type="text" required placeholder="" />
            </div>
        </div>

        <div>
            <br />
            <br />
            <input type="submit" value="Login" />
        </div>

    </div>
</form>

